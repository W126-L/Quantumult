[Rule]
DOMAIN-SUFFIX,bad.news,PROXY

[Argument]
type = select,"短视频","长视频","日本AV","H动漫",tag=视频分类
arg1 = input,"0 20 * * *",tag=定时推送
app = select,"Safari","zFuse","nPlayer",tag=打开方式
[Script]
//定时获取随机视频推送
cron {arg1} script-path=https://raw.githubusercontent.com/W126-L/Tool/master/Scripts/bad_news.js, timeout=60, tag=bad.news推送, img-url=https://raw.githubusercontent.com/W126-L/Tool/main/IconSet/bad_news.jpeg,argument=[{type},{app}]
